/**app.wxss**/
.container {
  height: 750px;
  display: flex;
  font-size:30rpx;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #e6e6e6;
} 
/* 按钮  */
.btn-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 8px #999 inset; 
}
/*镂空按钮 点击阴影不宜太深 */
.plain-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #bbbec4 inset; 
}